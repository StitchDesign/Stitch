{
  "$defs": {
      "AddNodeAction": {
        "type": "object",
        "properties": {
          "node_id": { "type": "string" },
          "node_name": { "$ref": "#/$defs/NodeName" },
          "node_type": { "$ref": "#/$defs/NodeType" },
          "step_type": { "type": "string", "const": "add_node" }
        },
        "required": ["node_id", "node_name", "node_type", "step_type"],
        "additionalProperties": false
      },
      "ConnectNodesAction": {
        "type": "object",
        "properties": {
          "from_node_id": { "type": "string" },
          "to_node_id": { "type": "string" },
          "port": {
            "anyOf": [
              { "type": "integer" },
              { "$ref": "#/$defs/LayerPorts" }
            ]
          },
          "from_port": { "type": "integer" },
          "step_type": { "type": "string", "const": "connect_nodes" }
        },
        "required": ["from_node_id", "to_node_id", "port", "from_port", "step_type"],
        "additionalProperties": false
      },
    "ChangeNodeTypeAction": {
      "type": "object",
