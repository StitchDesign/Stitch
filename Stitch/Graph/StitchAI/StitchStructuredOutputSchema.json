            "from_node_id": { "type": "string" },
            "to_node_id": { "type": "string" },
            "port": {
              "anyOf": [
                { "type": "integer" },
                { "$ref": "#/$defs/LayerPorts" }
              ]
            },
            "from_port": { "type": "integer" },
            "value": {
              "anyOf": [
                { "type": "number" },
                { "type": "string" },
                { "type": "boolean" },
                { "type": "object", "properties": {}, "additionalProperties": false }
              ]
            }
          },
          "required": [
            "step_type",
            "node_id",
            "node_name",
            "node_type",
            "from_node_id",
            "to_node_id",
            "port",
            "from_port",
            "value"
          ],
          "additionalProperties": false
