        "node_id": { "type": "string" },
        "node_type": { "$ref": "#/$defs/NodeType" }
      },
      "required": ["step_type", "node_id", "node_type"],
      "additionalProperties": false
    },
    "SetInputAction": {
      "type": "object",
      "properties": {
        "step_type": { "type": "string", "const": "set_input" },
        "node_id": { "type": "string" },
        "value": {
          "anyOf": [
            { "type": "number", "additionalProperties": false },
            { "type": "string", "additionalProperties": false },
            { "type": "boolean", "additionalProperties": false },
            { "type": "object", "properties": {}, "additionalProperties": false }
          ]
        },
        "port": {
          "anyOf": [
            { "type": "integer", "additionalProperties": false },
            { "$ref": "#/$defs/LayerPorts" }
          ]
        },
        "node_type": { "$ref": "#/$defs/NodeType" }
      },
      "required": ["step_type", "node_id", "port", "value", "node_type"],
      "additionalProperties": false
    },
