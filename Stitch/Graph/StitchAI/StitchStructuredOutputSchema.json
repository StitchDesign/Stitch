            "step_type": {
              "type": "string",
              "enum": [
                "add_node",
                "connect_nodes",
                "change_node_type",
                "set_input",
                "add_layer_input"
              ]
            },
            "node_id": { "type": "string" },
            "node_name": { "$ref": "#/$defs/NodeName" },
